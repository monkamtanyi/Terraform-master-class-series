vpc.tf in vpc dir
resource "aws_vpc" "my_test" {
  cidr_block = var.cidr
  tags = {
    Name = local.vpc_name
  }
}

resource "aws_subnet" "main" {
  vpc_id     = aws_vpc.my_test.id
  cidr_block = var.sub_cidr

  tags = {
    Name = "Main"
  }
}

output "subnet_id" {
  value = aws_subnet.main.id
}
