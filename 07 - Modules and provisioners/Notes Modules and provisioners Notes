variable.tf in vpc dir
variable "cidr" {
  type    = string
  default = "10.0.0.0/16"
}

variable "sub_cidr" {
  type    = string
  default = "10.0.0.0/24"
}

variable "app_name" {
  type    = string
  default = "jenkins"
}
#name of my application is "jenkins
variable "env" {
  type    = string
  default = "prod"
}

variable "division" {
  type    = string
  default = "HR"
}
/*
locals {
  vpc_name = "var.app_name" - "var.env" - "var.division"  Profs own did not wk
} 
*/

  locals {
  vpc_name = "${var.app_name}-${var.env}-${var.division}"
}
